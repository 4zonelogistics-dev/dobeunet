# ====================================
# Environment Variables Template
# ====================================
# Copy this file to .env.local for development
# Copy to .env.production for production
# NEVER commit actual .env files to Git
# ====================================

# Supabase Configuration (REQUIRED)
# Get these from: https://app.supabase.com/project/_/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Analytics (OPTIONAL)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_ENABLE_ANALYTICS=false

# Intercom Chat (OPTIONAL)
VITE_ENABLE_INTERCOM=false
VITE_INTERCOM_APP_ID=your-intercom-app-id

# Error Monitoring (OPTIONAL)
VITE_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
VITE_SENTRY_ENVIRONMENT=development

# Feature Flags (OPTIONAL)
VITE_ENABLE_PREMIUM_FEATURES=false
VITE_ENABLE_BOOKING_SYSTEM=true

# ====================================
# SECURITY NOTES
# ====================================
# 1. NEVER use SUPABASE_SERVICE_ROLE_KEY in frontend code
# 2. Only VITE_ prefixed variables are exposed to the client
# 3. Keep .env files out of version control (already in .gitignore)
# 4. Use different Supabase projects for dev/staging/production
# 5. Rotate keys regularly (annually or after suspected breach)
